<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE mapper		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"		"http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.ly666.mapper.ArticleMapper">	<resultMap id="AllArticle" type="Article" autoMapping="true">		<id property="articleId" column="article_id"/>		<result property="articleTitle" column="article_title"/>		<result property="articleContent" column="article_content"/>		<result property="articleTime" column="article_time"/>		<result property="articlePic" column="article_pic"/>		<result property="articleDesc" column="article_desc"/>		<result property="articleCid" column="article_cid"/>		<association property="category" javaType="Category" autoMapping="true">			<id property="cid" column="cid"/>			<result property="cname" column="cname"/>			<result property="parentid" column="parentid"/>		</association>	</resultMap>	<select id="getAllArticle" resultMap="AllArticle">		select * from article a,category c1 where a.article_cid=c1.cid order by article_time desc	</select>	<select id="articleCount" resultType="integer">		select count(article_id) from article	</select>	<insert id="addArticle" parameterType="Article">		insert into article (article_title, article_content, article_time, article_pic, article_desc, article_cid)		   values (#{articleTitle},#{articleContent},#{articleTime},#{articlePic},#{articleDesc},#{articleCid});	</insert>	<select id="getArticle" parameterType="integer" resultMap="AllArticle">		select * from article where article_id=#{articleId}	</select>	<select id="getLikeArticles" resultMap="AllArticle" parameterType="string">		select * from article a,category c1 where a.article_cid=c1.cid and a.article_title like '%${str}%'	</select>	<select id="likeArticleCount" resultType="integer" parameterType="string">		select count(article_id) from article where article_title like '%'#{str}'%'	</select>	<update id="updateArticle" parameterType="Article">		update article set article_title=#{articleTitle},article_content=#{articleContent},article_time=#{articleTime},article_pic=#{articlePic},		                   article_desc=#{articleDesc},article_cid=#{articleCid}            where article_id=#{articleId}	</update>	<delete id="deleteArticle" parameterType="integer">		delete from article where article_id=#{articleId}	</delete>	<select id="getBigCategoryArticle" parameterType="integer" resultMap="AllArticle">		select * from article a,category c where a.article_cid=c.cid and c.parentid=#{parentid}	</select>	<select id="getBigCategoryArticleCount" resultType="integer">		select count(article_id) from article a,category c where a.article_cid=c.cid and c.parentid=#{parentid}	</select>	<select id="getSmallCategoryArticle" resultMap="AllArticle" parameterType="integer">		select * from article where article_cid=#{cid}	</select>	<select id="getSmallCategoryArticleCount" resultType="integer">		select count(article_id) from article where article_cid=#{cid}	</select></mapper>